

<h1>Articles</h1>

<div class="row">
  <% @articles.each do |article| %>
    <div class="col-md-4">
      <div class="card mb-4" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted">Article ID: <%= article.id %></h6>
          <p class="card-text"><%= truncate(article.body, length: 100) %></p>
          <h6 class="card-subtitle mb-2 text-muted">Created at: <%= article.created_at.strftime("%B %d, %Y %H:%M") %></h6>
          <a href="<%= article_path(article) %>" class="card-link">Read more</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
